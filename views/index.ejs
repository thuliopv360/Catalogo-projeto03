<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" href="../img/icone.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Catalogo</title>
</head>

<body>
    <%- include('./components/header.ejs') %>
        <main class="box">
            <% listFilmes.forEach((catalogo) => { %>
                <div class="card">
                    <a href="/detalhes/<%= catalogo.id %> " class="cards">
                        <h3>
                            <span>Titulo: </span>
                            <%= catalogo.titulo %>
                        </h3>
                        <img src="<%= catalogo.imagem %>" alt="imagem do filme">
                        <p>
                            <span>Estrelas: </span>
                            <%= catalogo.estrelas %>
                        </p>
                        <p>
                            <span>Ano de Lançamento: </span>
                            <%= catalogo.ano_de_lancamento %>
                        </p>
                        <p>
                            <span>Genero: </span>
                            <%= catalogo.genero %>
                        </p>
                        <p>
                            <span>Idioma: </span>
                            <%= catalogo.idioma %>
                        </p>
                        <p><span>Legenda: </span>
                            <%= catalogo.legenda %>
                        </p>
                        <p>
                            <span>Duração: </span>
                            <%= catalogo.duracao %>
                        </p>
                    </a>
                    <nav id="putAndDelete">
                        <a href="/getById/<%= catalogo.id %>/put" id="put">Atualizar</a>
                        <a href="/getById/<%= catalogo.id %>/delete" id="delete">Apagar</a>
                    </nav>

                </div>
                <% }) %>
        </main>
        <% if(filmesPut != null){%>
            <%- include('./components/modalPut.ejs') %>
                <%}%>
                    <% if(filmesDel != null){%>
                        <%- include('./components/modalDel') %>
                            <%} %>
                                <%- include('./components/footer.ejs') %>
</body>

</html>